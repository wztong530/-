"GoodList.vue","sourceRoot":"src\\components\\home","sourcesContent":["<template>\r\n  <div class=\"app-goodlist\">\r\n    <mt-header fixed title=\"学子商城\">\r\n      <mt-button slot=\"left\" @click=\"toHome\" icon=\"back\">返回</mt-button>\r\n    </mt-header>\r\n    <!-- 1.商品列表 2行2列 -->\r\n    <div class=\"goods-item\" v-for=\"item of list\" :key=\"item.i\">\r\n      <img src=\"http://127.0.0.1:3000/3.jpg\" alt=\"\">\r\n      <h4>{{item.lname}}</h4>\r\n      <h4 class=\"now\">¥{{item.price}}</h4>\r\n    </div>\r\n    <!-- 2.添加按钮 mint-ui Button -->\r\n    <mt-button size=\"large\" type=\"primary\" @click=\"loadMore\" >加载更多</mt-button>\r\n    <!-- <p v-else>没有更多了</p> -->\r\n  </div>\r\n</template>\r\n<script>\r\nexport default {\r\n  data(){\r\n    return{\r\n      list:[], //接收服务器返回商品数组\r\n      n:1,\r\n      //showMore:true,\r\n      hasMore:true\r\n    }\r\n  },\r\n  created(){\r\n    var url=\"http://127.0.0.1:3000/getGoodList\";\r\n    this.axios.get(url).then(res=>{\r\n      this.list=res.data.data;\r\n      //console.log(res);\r\n    })\r\n  },\r\n  methods:{\r\n    toHome(){\r\n      this.$router.push(\"/home\");\r\n    },\r\n    loadMore(){\r\n      if(this.hasMore==false){\r\n        this.$toast(\"没有更多的数据了...\");\r\n        return;\r\n      }\r\n      this.n++;\r\n      var url=\"http://127.0.0.1:3000/getGoodList?pno=\"+this.n;\r\n      this.axios.get(url).then(res=>{\r\n        this.list=this.list.concat(res.data.data);\r\n        if(res.data.data.length<4){\r\n          this.showMore=false;\r\n        }\r\n        if(this.n>=res.data.pageCount){\r\n          this.hasMore=false;\r\n        }\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n<style scoped>\r\n  .app-goodlist{\r\n    padding-top:40px;\r\n    padding-bottom:50px;\r\n    overflow-x:hidden;\r\n    display:flex;\r\n    flex-wrap:wrap;\r\n    justify-content:space-between;\r\n  }\r\n  .app-goodlist .goods-item{\r\n    width: 49%;\r\n    border: 1px solid #ccc;\r\n    margin: 2px 0;\r\n    padding: 2px;\r\n    display: flex;\r\n    flex-direction: column;\r\n    min-height: 245px;\r\n  }\r\n  .app-goodlist .goods-item img{\r\n    width: 100%;\r\n  }\r\n  .app-goodlist p{\r\n    font-size:18px;\r\n    text-align:center;\r\n    margin:10px auto;\r\n    width:100%;\r\n  }\r\n</style>\r\n"]}]}